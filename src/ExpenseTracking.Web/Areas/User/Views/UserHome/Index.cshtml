@using ExpenseTracking.Core.Models.WalletViewModels

@model WalletInformationViewModel

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-6 col-xl-3">
            <div class="bg-secondary rounded d-flex align-items-center justify-content-between p-4">
                <p class="fa-3x text-primary">@Model.CurrencySymbol</p>

                <div class="ms-3">
                    <p class="mb-2">Balance</p>
                    <h6 class="mb-0">@Model.CurrencySymbol @Model.Balance</h6>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-xl-3">
            <div class="bg-secondary rounded d-flex align-items-center justify-content-between p-4">
                <p class="fa-3x text-primary">@Model.CurrencySymbol</p>

                <div class="ms-3">
                    <p class="mb-2">Income</p>
                    <h6 class="mb-0">@Model.CurrencySymbol @Model.Income</h6>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-xl-3">
            <div class="bg-secondary rounded d-flex align-items-center justify-content-between p-4">
                <p class="fa-3x text-primary">@Model.CurrencySymbol</p>

                <div class="ms-3">
                    <p class="mb-2">Expense</p>
                    <h6 class="mb-0">@Model.CurrencySymbol @Model.Expence</h6>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-xl-3">
            <div class="bg-secondary rounded d-flex align-items-center justify-content-between p-4">
                <p class="fa-3x text-primary">@Model.CurrencySymbol</p>
                @*<i class="fa-sharp fa-solid fa-dollar-sign fa-3x text-primary"></i>*@
                <div class="ms-3">
                    <p class="mb-2">Savings</p>
                    <h6 class="mb-0">@Model.CurrencySymbol @Model.Savings</h6>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-8">
            <div class="bg-secondary text-center rounded p-4">
                <div class="d-flex align-items-center justify-content-between mb-4">
                    <h6 class="mb-0">Income & Expense</h6>
                </div>
                <canvas id="salse-revenue"></canvas>
            </div>
        </div>
        <div class="col-sm-12 col-xl-4">
            <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4 as-4">Pie Chart</h6>
                <canvas id="pie-chart"></canvas>
            </div>
        </div>
    </div>
</div>

<script>
    var ctx2 = $("#salse-revenue").get(0).getContext("2d");
    var myChart2 = new Chart(ctx2, {
        type: "line",
        data: {
            labels: [@this.ViewBag.DaysOfTheMonth],
            datasets: [{
                label: "Income",
                data: [@this.ViewBag.ExpensesForDay],
                backgroundColor: "rgba(235, 22, 22, .7)",
                fill: true
            },
            {
                label: "Expense",
                data: [@this.ViewBag.IncomesForDay],
                backgroundColor: "rgba(235, 22, 22, .5)",
                fill: true
            }
            ]
        },
        options: {
            responsive: true
        }
    });

    var ctx5 = $("#pie-chart").get(0).getContext("2d");
    var myChart5 = new Chart(ctx5, {
        type: "pie",
        data: {
            labels: ["Italy", "France", "Spain", "USA", "Argentina"],
            datasets: [{
                backgroundColor: [
                    "rgba(235, 22, 22, .7)",
                    "rgba(235, 22, 22, .6)",
                    "rgba(235, 22, 22, .5)",
                    "rgba(235, 22, 22, .4)",
                    "rgba(235, 22, 22, .3)"
                ],
                data: [55, 49, 44, 24, 15]
            }]
        },
        options: {
            responsive: true
        }
    });
</script>